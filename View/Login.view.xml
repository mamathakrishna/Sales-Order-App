<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="sorderapp.Login" xmlns:html="http://www.w3.org/1999/xhtml">
	
	<html:style>
	.myLoginbkgrnd
		{
		background-image:url("images/bgoundnew.jpg"); 
		<!-- background-image:url("images/96430.jpg"); -->
		
		}
		
	</html:style>
	
	<Page class="myLoginbkgrnd" showHeader="false">
		<content>
	<HBox width="auto" height="100%">
				<VBox id="vert" class="myvbox">
					<Text id="mytxt" text="Sales Order App" class="myLogintext" />
					<Input id="unameinput" class="myLogininput myLogininput1" showSuggestion="true" placeholder="Username"
					value="" />
					<Input id="pswdinput" class="myLogininput myLogininput1" showSuggestion="true" value=""
						placeholder="Password" maxLength="8" type="Password" />
					<Image id="img" src="images/log.gif" 
						class="myLoginImage" /> 
						<Button id="btnLogin" class="mybtn mybtn1 mybtnStyle" text="Login" press="OnLogin"/>
						<Image id="imglog" src="images/sap_logo.png" 
						class="myloginLogo" />
						<Text id="mytxt1" text="Copyright Â© 2015 SAP AG. All rights reserved." class="myloginCopyright" />
						
				</VBox>
			</HBox>
		</content>
	</Page>
</core:View>